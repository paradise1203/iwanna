<h3>New record:</h3>

<%= form_for([@goal, @goal.records.build]) do |f| %>
    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :content %> <br>
        <%= f.text_area :content, rows: "5", class: "form-control", placeholder: "Message", id: "message" %>
      </div>
    </div><br>

    <div class="row">
      <div class="actions form-group col-xs-12">
        <%= f.submit "Add", class: 'btn btn-default' %>
      </div>
    </div>
<% end %>