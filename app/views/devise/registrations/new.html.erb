<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :email %><br />
        <%= f.email_field :email, type: "email", class: "form-control", placeholder: "Email", id: "email" %>
      </div>
    </div>

    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :password %>
        <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", type: "password",
                             class: 'form-control', placeholder: "Password", id: "password"%>
      </div>
    </div>

    <div class="row control-group">
      <div class="form-group col-xs-12 floating-label-form-group controls">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", type: "password",
                             class: 'form-control', placeholder: "Confirm password", id: "password"%>
      </div>
    </div><br>

    <div class="row">
      <div class="actions form-group col-xs-12">
        <%= f.submit "Sign up", type: 'submit', class: 'btn btn-default' %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
<% end %>
